<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add An Expense:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/vendor"
        android:hint="Vendor Name" />

    <EditText
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:id="@+id/expType"
        android:hint="Expense Type" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/transDate"
        android:hint="Transaction Date(Ex 11/20/16)" />

    <EditText
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:id="@+id/currency"
        android:hint="Currency" />

    <EditText
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/amt"
        android:hint="Amount" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Attach Receipt"
        android:id="@+id/attReceipt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button5" />

</LinearLayout>